<div class="crumbs" xstyle="margin-top:1.1em;">
  <%= link_to I18n.t('txt.forums', :default => 'Forums'), root_path %> <span class="arrow">&rarr;</span>
  <%= link_to h(@forum.name), forum_path(@forum) %> <span class="arrow">&rarr;</span>
</div>


<h1 id="new_topic"><%= I18n.t 'txt.new_topic', :default => 'New topic' %></h1>
<%if logged_in?%>
  <p class="subtitle"><%= I18n.t 'txt.by_user', :default => 'by {{user}}', :user => current_user.display_name %></p>
<%end%>


<%= error_messages_for :topic %>
<% form_for :topic,
     :url  => forum_topics_path(@forum) do |f| -%>
<%= render :partial => "form", :object => f %>
      <%unless logged_in?%>
        <div style="float:left">
        
        <b style="text-align:center;padding-left:200px"><%= I18n.t 'txt.login_or_signup_and_comment', :default => 'Login now' %></b><br/>                     
             <div id="login" style="float:left;width:200px;padding-left:100px">             
               <%= render :partial => "sessions/form"%><br/>
               <%= submit_tag I18n.t('txt.post_topic_and_login', :default => 'Log in and post topic')%>
             </div>
     
             <div id="cadastro" style="float:right;width:300px;padding-left:30px">
              <% fields_for :user do |f| %>
                  <%= render :partial => "users/form_new",:locals=>{:f=>f} %>
              <% end %><br/>
              <%= submit_tag I18n.t('txt.post_topic_and_create_user', :default => 'Create user and post topic')%>
             </div>
        </div>
       <%end%>
<div <%unless logged_in?%>style="float:left;margin-top:270px"<%end%>>      
  <%= submit_tag I18n.t('txt.post_topic', :default => 'Post topic') if logged_in?%>
</div>
<% end -%>

<%= javascript_tag "$('topic_title').focus();" %>

