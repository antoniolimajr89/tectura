<% content_for :end_page_js do %>
<script type="text/javascript">
  $("user_confirmation_field").hide();
</script>
<% end %>

<div id="newUser">
  <h3>CADASTRE-SE AGORA</h3>
  <p>
    <label for="login"><%= I18n.t 'txt.login_name_signup', :default => 'Login' %></label>
    <%= f.text_field :login %>
  </p>
  <p>
    <label for="email"><%= I18n.t 'txt.email', :default => 'Email' %></label>
    <%= f.text_field :email %>
  </p>
  <p>
    <label for="password"><%= I18n.t 'txt.password', :default => 'Password' %></label>
    <%= f.password_field :password %>
  </p>
  <p>
    <label for="password_confirmation"><%= I18n.t 'txt.password_confirm', :default => 'Confirm Password' %></label>
    <%= f.password_field :password_confirmation %>
  </p>
  <p>
    <label for="city"><%= I18n.t 'txt.city_label', :default => 'City' %></label>
    <%= f.text_field :city %>
  </p>
  <p>
    <label for="user_openid_url"><%= I18n.t 'txt.openid_url', :default => "OpenID URL (optional)" %></label>
    <%= f.text_field :openid_url %>
  </p>
  <p>
    <label for="receive_mailing"><%= f.check_box :receive_mailing %><%= I18n.t 'txt.receive_mailing', :default => "I want to receive most commented posts of last two weeks and the important events (biweekly email)" %></label>
  </p>
  <p id="user_confirmation_field">
    <label for="user_confirmation"><%= I18n.t 'txt.user_confirm', :default => "User confirmation" %></label>
    <%= text_field_tag :confirmation %>
  </p>
  <span style="visibility:hidden">.</span><%= get_captcha(:options => {:theme => 'blackglass'}) %><span style="visibility:hidden">.</span>
</div>
